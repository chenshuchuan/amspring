  <div class="container" style="width: 1200px;">
    <%= link_to image_tag("logo.png", alt: "Logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav pull-right header-dd" style="margin-top: 25px;">
        <!--li><%= link_to t("home"), root_path %></li-->
