<% provide(:title, @user.name) %>
<div class="row-fluid">
  <div class="span3">
	  <section>
	  <h1><%= gravatar_for @user %></h1>
    </section><br/>
    <ul class="unstyled">
      <li>
        <%= @user.email %>
      </li><br/>    
      <li>
        <%= render 'shared/stats' %>
      </li><br/>
      <li>
        <%= render 'follow_form' if signed_in? %>
      </li>
    </ul>
  </div>

  <div class="span9">
    
  	<% if @user.microposts.any? %>
      <h3>
      <% if current_user?(@user)%>
        <%= t('my_blog') %> 
      <% else%>  
        <%= t('microposts')%>
      <% end %>

      (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
  	<% end %>
  </div>
</div>
