<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
	<section>
	  <h1>
		<%= gravatar_for @user %>
	    <%= @user.name %>
      </h1>
	</section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <% if current_user?(@user) %>
    <div class="span8">
    <hr/>
  	<aside>
      <section>
        <%= link_to "New Microposts ", new_micropost_path, class: "btn btn-large btn-primary"%>
      </section>
    </aside>
      </div>
  <% end %>  


  <div class="span8">
  <hr/>
    <%= render 'follow_form' if signed_in? %>
  	<% if @user.microposts.any? %>
  	  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  	  <ol class="microposts">
  	    <%= render @microposts %>
  	  </ol>
  	  <%= will_paginate @microposts %>
  	<% end %>
  </div>
</div>

