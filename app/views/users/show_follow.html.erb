<% provide(:title, @title) %>
  <div class="row-fluid">
    <aside class="span3">
    <section>
      <%= link_to gravatar_for(@user), @user %>
    </section>
    <ul class="unstyled"><br/>
      <li>
        <%= @user.email %>
      </li><br/>    
      <li>
        <%= render 'shared/stats' %>
      </li><br/>
    </ul>    
    </aside>
  <div class="span9">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>