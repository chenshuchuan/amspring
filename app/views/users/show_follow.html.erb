<% provide(:title, @title) %>
<br />
  <div class="row">
    <aside class="span4">
    <section>
      <%= link_to gravatar_for(@user), @user %>
      <h1><%= @user.name %></h1>
      <!--span><%= link_to t("view_my_profile"), @user %></span><br /-->
      <!--span><b><%= t('microposts') %>:</b> <%= @user.microposts.count %></span-->
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>