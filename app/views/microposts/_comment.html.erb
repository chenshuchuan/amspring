<% sum = 0 %>
<div><%= t('comment_count')%>: <%= @micropost.comments.count()%>
     <%= t('number_comnet')%></div><br/>
<% @micropost.comments.each do |comment| %>
<div class="comment">
  <div class="pull-left">
    <%= link_to gravatar_for(avatar(comment.user_id)), user_path(comment.user_id) %>
  </div>
  
  <table class="table">  
    <div class="pull-left02"> 
      <ul>
        <li class="li-01"><%= comment_user(comment.user_id) %></li>
        <li class="li-02"><%= time_ago_in_words(comment.created_at) %></li>
        <li class="li-03"><%= sum += 1 %><%= t('floor')%></li>
      </ul>
    </div>
    <div class="pull-left02">
      <ul>
        <%= comment.body.html_safe %>
      </ul>
    </div>
  </table>
  <div>
    <!--% if current_user?(@micropost.user) %-->
    <% if signed_in? && current_user.admin? %>
    <%= link_to t('delete_it'), [comment.micropost, comment],
                method: :delete,
                data: { confirm: t('your_sure') },
                class: "btn btn-mini btn-danger" %>
    <% end %>
  </div>
</div>
<hr />
<% end %>
