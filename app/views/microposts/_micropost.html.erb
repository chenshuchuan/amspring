<table class="table table-hover">
<tr class="info">
  <td>
  <span class="content">
    <%= link_to micropost.title, micropost_path(micropost.id) %>
  </span><br />
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>
  </span>  
  <span><%= micropost.categ_name %></span>
  <span><%= t('comment_count')%>: <%= micropost.comments.count()%></span>
  <% if current_user?(micropost.user) %>
  <span>
    <%= link_to t("edit"), edit_micropost_path(micropost), class: "btn btn-mini btn-warning"%>
    <%= link_to t("delete"), micropost, method: :delete,
    data: { confirm: t("you_sure") },
    title: micropost.title, 
    class: "btn btn-mini btn-danger" %>
  </span>  
  <% end %>
  </td>
</tr>  
</table>
<style type="text/css">
span{
  margin-left: 20px;
}
</style>