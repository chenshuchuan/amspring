<br />
<h1><%= t('my_blog')%></h1>
  <% @microposts.each do |m| %>
  <table class="table table-hover">  
  <tr class="info">
  <td>
    <%= gravatar_for avatar(m.user_id) %>
    <p><%= link_to m.title, micropost_path(m.id) %></p>
    <span class="timestamp">
      <%= time_ago_in_words(m.created_at) %>
    </span>
  </td>
  </tr>
  </table>    
  <% end %>
