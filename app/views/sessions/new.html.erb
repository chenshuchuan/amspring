<% provide(:title, t("sign_in")) %>
<br />
<h1><%= t("sign_in") %></h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <p><%= t('email') %></p>
      <%= f.text_field :email %>

      <p><%= t('password') %></p>
      <%= f.password_field :password %>
      
      <p><%= f.submit t("singin"), class: "btn btn-large btn-primary" %></p>
    <% end %>
    <p><%= t('new_user') %> ? <%= link_to t("sign_up"), signup_path %></p>
  </div>
</div>  