<% provide(:title, t("sign_in")) %>
<section class="login">
<div class="titulo"><%= t("sign_in") %></div>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.text_field :email, placeholder: t("email") %>
      <%= f.password_field :password, placeholder: t("password") %>
      
      <%= f.submit t("singin"), class: "enviar" %>
    <% end %>
  <div class="olvido">  
    <%= link_to t("forgotten_password"), new_password_reset_path, class: "col" %>
    <%= t('new_user') %> ? <%= link_to t("sign_up"), signup_path, class: "col" %>
  </div>    
</div> 
</section>