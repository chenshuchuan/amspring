<table class="table table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th><%= t('category_name')%></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
        <td><%= link_to t('delete'), c, method: :delete, 
                                        :remote => true, 
                                        class: 'btn btn-mini btn-danger',
                                        data: { confirm: t('your_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>	