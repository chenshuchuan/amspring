<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
	    <%= f.text_field :title, placeholder: t("new_blog_here") %><br />
		<%= f.kindeditor :content, :simple_mode => true %>
	</div>
	<%= f.submit t("new"), class: "btn btn-primary" %>
<% end %>
