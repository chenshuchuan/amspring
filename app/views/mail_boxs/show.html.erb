<dl class="dl-horizontal">
  <dt><%= t('topic')%>:</dt>
  <dd><%= @message.topic %></dd>

  <dt><%= t('send_user')%>:</dt>
  <dd><%= get_box_user(@message.sent_messageable_id) %></dd>  

  <dt><%= t('times')%>:</dt>
  <dd><%= @message.created_at.strftime('%Y-%m-%d %H:%M') %></dd>

  <dt><%= t('body')%>:</dt>
  <dd><%= sanitize @message.body %></dd>   
  <br />
  <dt><%= link_to t("back"), mail_boxs_path, class: "btn btn-mini btn-info" %>
      <%= link_to t("reply"), send_email_mail_box_path(@message.sent_messageable_id), 
        class: "btn btn-mini btn-info" %></dt>
</dl>
