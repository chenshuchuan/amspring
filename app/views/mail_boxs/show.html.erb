<dl class="dl-horizontal">
  <dt>标题:</dt>
  <dd><%= @message.topic %></dd>

  <dt>发件人:</dt>
  <dd><%= get_box_user(@message.sent_messageable_id) %></dd>  

  <dt>时间:</dt>
  <dd><%= @message.created_at.strftime('%Y-%m-%d %H:%M') %></dd>

  <dt>内容:</dt>
  <dd><%= @message.body.html_safe %></dd>   
  <br />
  <dt><%= link_to "返回", mail_boxs_path, class: "btn btn-mini btn-info" %></dt> 
</dl>
