<table class="table table-hover">
  <thead>
    <tr>
      <th>发件人</th>
      <th>标题</th>
      <th>时间</th>
      <th>状态</th>          
    </tr>
  </thead>
  <% @inboxs.each do |m| %>
  <tbody>
    <tr>
      <td><%= get_box_user(m.sent_messageable_id) %></td>
      <td><%=link_to m.topic, mail_box_path(m.id) %></td>
      <td><%= m.created_at.strftime('%Y-%m-%d %H:%M') %></td>
      <td><%= status(m.opened) %></td> 
      <td><%= link_to t('delete'), mail_box_path(m.id),
                method: :delete,
                data: { confirm: t('your_sure') },
                class: "btn btn-mini btn-danger" %></td>           
    </tr>
  </tbody>
  <% end%>
</table>  