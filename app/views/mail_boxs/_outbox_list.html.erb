<table class="table table-hover">
  <thead>
    <tr>
      <th>收件人</th>
      <th>标题</th>
      <th>时间</th>        
    </tr>
  </thead>
  <% @outboxs.each do |m| %>
  <tbody>
    <tr>
      <td><%= get_box_user(m.received_messageable_id) %></td>
      <td><%= m.topic %></td>
      <td><%= m.created_at.strftime('%Y-%m-%d %H:%M') %></td>
      <td><%= link_to t('delete'), mail_box_path(m.id),
                method: :delete,
                data: { confirm: t('your_sure') },
                class: "btn btn-mini btn-danger" %></td>            
    </tr>
  </tbody>
  <% end %>
</table>  